
<h3 class="ui center aligned icon header">
  <i class="universal access red icon"></i>
  Sign In to Continue....
</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
          <label>Username /Email</label>
          <div class="ui left icon input">
            <%= f.text_field :login, autofocus: true, autocomplete: "login", placeholder: "Username or Email.." %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
              <%= f.password_field :password, autocomplete: "password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %> Remember me
          </div>
        <% end %>
        <%= f.submit "Sign In", class: "ui  submit fluid red button" %> <br>
          <div class="field">
            <h5><a href="/forget-pass">Forget your password?</a></h5>
          </div>
      </div>
    </div>
    <div class="middle aligned column">
      <a class="ui gra" href="/sign_up">
      <div class="ui big red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
        </a>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
<% end %>