<div class="ui comments">
    <div class="comment">
        <a class="avatar">
        <img src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8dXNlcnxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60">
        </a>
            <div class="content fluid">
            <a class="author ui header"><%= message.user.username %></a>
            <div class="metadata">
                <div class="date"><%= time_ago_in_words(message.created_at)%> ago</div>
            </div>
            <div class="text">
                <%= message.content %> <%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } if message.user == current_user %>
            </div>
        </div>
    </div>
</div>