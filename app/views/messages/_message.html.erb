<div class="ui comments">
    <div class="comment">
        <a class="avatar">
        <img src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8dXNlcnxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60">
        </a>
            <div class="content fluid">
            <a class="author ui header"><%= message.user.username %></a>
            <div class="metadata">
                <div class="date"><%= time_ago_in_words(message.created_at)%> ago</div>
            </div>
            <div class="text">
                <%= message.content %> 
                <div class="ui icon top left pointing dropdown ">
                <% if message.user == current_user %>
                    <i class="ellipsis vertical icon"></i>
                    <div class="menu">
                        <div class="item">
                            <i class="trash icon"></i>
                                <%= link_to 'Delete', message, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
                        </div>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>